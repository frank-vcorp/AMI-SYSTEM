{
  "name": "ami-system-monorepo",
  "version": "0.1.0",
  "description": "AMI-SYSTEM v2.0 - Monorepo con Next.js + Prisma + TypeScript",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "type-check": "tsc --version",
    "build": "rm -rf node_modules/.prisma && npx prisma generate --schema=./prisma/schema.prisma && turbo run build --filter=@ami/web-app",
    "dev": "turbo run dev --filter=@ami/web-app",
    "prisma:generate": "npx prisma generate --schema=./prisma/schema.prisma",
    "seed:demo": "tsx prisma/seeds/demo-data.ts",
    "seed:clean": "npx prisma migrate reset --force --skip-seed",
    "dashboard:update": "node progressdashboard/parser.js",
    "dashboard:watch": "node progressdashboard/parser.js && echo 'Dashboard updated. Watch PROYECTO.md for changes.'"
  },
  "devDependencies": {
    "@prisma/client": "6.19.1",
    "prisma": "6.19.1",
    "turbo": "^2.7.4",
    "typescript": "^5.2.2"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "canvas"
    ],
    "supportedArchitectures": {
      "os": [
        "linux"
      ],
      "cpu": [
        "x64"
      ]
    }
  }
}