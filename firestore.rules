rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Requiere autenticación para todas las operaciones
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Usuarios (colección raíz)
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Clínicas por tenant
    match /tenants/{tenantId}/clinics/{clinicId} {
      allow read, write: if request.auth != null;
    }
    
    // Citas por tenant
    match /tenants/{tenantId}/appointments/{appointmentId} {
      allow read, write: if request.auth != null;
    }
  }
}
